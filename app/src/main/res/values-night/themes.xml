<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Dark Theme -->
    <style name="Base.Theme.UVMS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Branding -->
        <item name="colorPrimary">@color/uvmsBlueLight</item>
        <item name="colorPrimaryContainer">@color/uvmsBlueDark</item>
        <item name="colorSecondary">@color/uvmsBluePrimary</item>
        <item name="colorSecondaryContainer">@color/uvmsBlueDark</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/uvmsBackgroundDark</item>
        <item name="colorSurface">@color/uvmsSurfaceDark</item>
        <item name="colorOnSurface">@color/uvmsTextPrimaryDark</item>

        <!-- App-specific colors -->

        <item name="android:fontFamily">@font/roboto_black</item>

        <!-- Optional: Override for MaterialComponents widgets -->
        <item name="fontFamily">@font/space_mono_regular</item>

        <!-- Text & Icons -->
        <item name="colorOnPrimary">@color/uvmsTextPrimaryDark</item>
        <item name="colorOnSecondary">@color/uvmsTextPrimaryDark</item>
        <item name="colorOnError">@color/uvmsTextPrimaryDark</item>

        <!-- Error -->
        <item name="colorError">@color/ErrorRed</item>

        <!-- Divider -->
        <item name="dividerColor">@color/uvmsDivider</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.UVMS" parent="Base.Theme.UVMS" />
</resources>
