<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme -->
    <style name="Base.Theme.UVMS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Branding -->
        <item name="colorPrimary">@color/uvmsBluePrimary</item>
        <item name="colorPrimaryContainer">@color/uvmsBlueLight</item>
        <item name="colorSecondary">@color/uvmsBlueLight</item>
        <item name="colorSecondaryContainer">@color/uvmsBlueDark</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/uvmsBackgroundLight</item>
        <item name="colorSurface">@color/uvmsSurfaceLight</item>
        <item name="colorOnSurface">@color/uvmsTextPrimaryLight</item>

        <!-- Text & Icons -->
        <item name="colorOnPrimary">@color/uvmsTextPrimaryLight</item>
        <item name="colorOnSecondary">@color/uvmsTextPrimaryLight</item>
        <item name="colorOnError">@color/uvmsTextPrimaryLight</item>

        <!-- Fonts -->
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="fontFamily">@font/share_tech_regular</item>

        <!-- Error & Divider -->
        <item name="colorError">@color/ErrorRed</item>
        <item name="dividerColor">@color/uvmsDivider</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.UVMS" parent="Base.Theme.UVMS" />

    <!-- No ActionBar Variant -->
    <style name="Theme.UVMS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
