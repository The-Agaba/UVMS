<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp">
    <!--  Welcome Message  -->
    <TextView android:id="@+id/welcomeTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/policy_welcome" android:textSize="20sp" android:textStyle="bold" android:gravity="center" android:layout_marginBottom="16dp"/>
    <!--  Search View  -->
    <SearchView android:id="@+id/searchView" android:layout_width="match_parent" android:layout_height="wrap_content" android:queryHint="@string/SearchPolicy_hint" android:layout_marginBottom="16dp"/>
    <!--  Filter Chips  -->
    <com.google.android.material.chip.ChipGroup android:id="@+id/filterChipGroup" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp">
        <com.google.android.material.chip.Chip android:id="@+id/chipAll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/all_filter" android:checked="true"/>
        <com.google.android.material.chip.Chip android:id="@+id/chipFood" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/food_filter"/>
        <com.google.android.material.chip.Chip android:id="@+id/chipSafety" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/safety_filter"/>
        <com.google.android.material.chip.Chip android:id="@+id/chipQuality" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/quality_filter"/>
        <com.google.android.material.chip.Chip android:id="@+id/chipCompliance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/compliance_filter"/>
    </com.google.android.material.chip.ChipGroup>
    <!--  Policies RecyclerView  -->
    <!--  CHANGED: height to 0dp and added layout_weight="1"  -->
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/policiesRecyclerView" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
</LinearLayout>