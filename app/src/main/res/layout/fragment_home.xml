<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/uvmsBackgroundLight"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- License Status Section -->
        <TextView
            android:id="@+id/tvLicenseStatusTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/license_status"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/uvmsTextPrimaryLight"
            android:layout_marginBottom="16dp" />

        <!-- Horizontal ScrollView for License Cards -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/license_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <!-- Your Existing License Title and RecyclerView -->
        <TextView
            android:id="@+id/tvHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_licenses"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/uvmsTextSecondaryLight"
            android:layout_marginBottom="16dp"/>
        <ImageView
            android:contentDescription="Loader"
            android:id="@+id/loaderView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ripple_loader"
            android:background="@drawable/bg_searchview"
            android:visibility="gone"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>

        <!-- Quick Actions Section -->
        <TextView
            android:id="@+id/tvQuickActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quick_actions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/uvmsTextSecondaryLight"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- GridLayout for Quick Actions -->
        <GridLayout
            android:id="@+id/quickActionsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="3dp"
            android:useDefaultMargins="true"
            android:layout_gravity="center">


        <!-- Cards will be added programmatically -->
        </GridLayout>

    </LinearLayout>
</ScrollView>
