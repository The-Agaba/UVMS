<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top App Bar with Back Button -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_round_borders"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/title_profile"
        app:titleTextColor="@color/uvmsBackgroundDark"
        android:tooltipText="@string/tooltip_profile"
        app:contentInsetStart="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/uvmsSurfaceLight"
        android:padding="16dp"
        android:textColor="@color/uvmsBackgroundDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/circle_background"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_placeholder"
                    android:textColor="@color/uvmsTextPrimaryLight"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_placeholder"
                    android:textColor="@color/uvmsTextPrimaryLight"
                    android:background="@drawable/status_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:layout_marginTop="6dp"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Section: Personal Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_personal_info"
                android:textColor="@color/uvmsBackgroundDark"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_background"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Full Name Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        android:contentDescription="@string/personal_label_full_name"
                        android:tint="@color/uvmsBluePrimary"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_label_full_name"
                            style="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvPersonalName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_full_name_placeholder"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="@color/uvmsBackgroundDark"
                            android:paddingTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Email Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        android:contentDescription="@string/personal_label_email"
                        android:tint="@color/uvmsBluePrimary"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_label_email"
                            style="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvPersonalEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_email_placeholder"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="@color/uvmsBackgroundDark"
                            android:paddingTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Phone Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"
                        android:contentDescription="@string/personal_label_phone"
                        android:tint="@color/uvmsBluePrimary"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_label_phone"
                            style="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvPersonalPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_phone_placeholder"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="@color/uvmsBackgroundDark"
                            android:paddingTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Section: Business Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_business_info"
                android:textColor="@color/uvmsBackgroundDark"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_background"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Business Name Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_id_card"
                        android:contentDescription="@string/business_label_name"
                        android:tint="@color/uvmsBluePrimary"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/business_label_name"
                            style="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvBusinessName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/business_name_placeholder"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="@color/uvmsBackgroundDark"
                            android:paddingTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Business Type Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_id_card"
                        android:contentDescription="@string/business_label_type"
                        android:tint="@color/uvmsBluePrimary"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/business_label_type"
                            style="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvBusinessType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/business_type_placeholder"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="@color/uvmsBackgroundDark"
                            android:paddingTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Business ID Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_id_card"
                        android:contentDescription="@string/business_label_id"
                        android:tint="@color/uvmsBluePrimary"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/business_label_id"
                            style="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvBusinessId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/business_id_placeholder"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="@color/uvmsBackgroundDark"
                            android:paddingTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Section: Account -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_account"
                android:textColor="@color/uvmsTextPrimaryLight"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="12dp">

                <Button
                    android:id="@+id/btnEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/account_btn_edit_profile"
                    android:drawableLeft="@drawable/ic_edit"
                    android:drawableTint="@color/uvmsBlueDark"
                    android:backgroundTint="@color/uvmsAccentCyan"
                    android:textColor="@color/uvmsTextPrimaryLight" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/account_btn_logout"
                    android:drawableLeft="@drawable/ic_logout"
                    android:drawableTint="@color/statusRejectedRed"
                    android:backgroundTint="@color/uvmsSurfaceLight"
                    android:textColor="@color/statusRejectedRed"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Member since -->
            <TextView
                android:id="@+id/tvMemberSince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_since_placeholder"
                android:textSize="12sp"
                android:textColor="@color/uvmsTextSecondaryDark"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
