<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/uvmsGradientEnd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@android:color/darker_gray"
        android:showDividers="middle"
        android:paddingBottom="32dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvLicenseNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="License #"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/uvmsBlueDark"
            android:paddingBottom="12dp" />

        <!-- Vendor Info -->
        <TextView
            android:id="@+id/tvVendorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor: -"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="@color/uvmsBackgroundDark" />

        <TextView
            android:id="@+id/tvVendorTIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIN: -"
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:textColor="@color/uvmsBackgroundDark" />

        <!-- College Info -->
        <TextView
            android:id="@+id/tvCollegeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="College: -"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="@color/uvmsBackgroundDark" />

        <!-- Tender Info -->
        <TextView
            android:id="@+id/tvTenderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tender: -"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="@color/uvmsBackgroundDark" />

        <!-- License Status -->
        <TextView
            android:id="@+id/tvLicenseStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: -"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="@color/uvmsBlueDark"
            android:textStyle="bold" />

        <!-- Dates -->
        <TextView
            android:id="@+id/tvIssueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issued: -"
            android:textSize="15sp"
            android:paddingTop="12dp"
            android:textColor="@color/uvmsBackgroundDark" />

        <TextView
            android:id="@+id/tvExpiryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expires: -"
            android:textSize="15sp"
            android:paddingTop="4dp"
            android:textColor="@color/uvmsBackgroundDark" />

        <!-- File Path -->
        <TextView
            android:id="@+id/tvLicenseFilePath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File: -"
            android:textSize="14sp"
            android:paddingTop="12dp"
            android:textColor="@color/uvmsBackgroundDark" />

    </LinearLayout>
</ScrollView>
