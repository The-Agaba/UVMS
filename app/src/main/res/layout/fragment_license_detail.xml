<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/uvmsBackgroundLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="12dp">

        <!-- License Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/uvmsAccentCyan">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvLicenseNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="License #"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/uvmsTextPrimaryLight" />

                <TextView
                    android:id="@+id/tvLicenseStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: N/A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/uvmsBlueDark"
                    android:paddingTop="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Vendor Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/uvmsGradientEnd">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvVendorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vendor: N/A"
                    android:textSize="16sp"
                    android:textColor="@color/uvmsTextPrimaryLight"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvVendorTIN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TIN: N/A"
                    android:textSize="14sp"
                    android:textColor="@color/uvmsTextPrimaryLight"
                    android:paddingTop="4dp"/>

                <TextView
                    android:id="@+id/tvVendorPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone: N/A"
                    android:textSize="14sp"
                    android:textColor="@color/uvmsTextPrimaryLight"
                    android:paddingTop="4dp"/>

                <TextView
                    android:id="@+id/tvVendorCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company: N/A"
                    android:textSize="14sp"
                    android:textColor="@color/uvmsTextPrimaryLight"
                    android:paddingTop="4dp"/>

                <TextView
                    android:id="@+id/tvVendorBusinessType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Business Type: N/A"
                    android:textSize="14sp"
                    android:textColor="@color/uvmsTextPrimaryLight"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Plot Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/uvmsGradientEnd">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvPlotId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plot ID: N/A"
                    android:textSize="16sp"
                    android:textColor="@color/uvmsTextPrimaryLight"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Dates & File -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/uvmsGradientEnd">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvIssueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Issued: N/A"
                    android:textSize="14sp"
                    android:textColor="@color/uvmsTextPrimaryLight"/>

                <TextView
                    android:id="@+id/tvExpiryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expires: N/A"
                    android:textSize="14sp"
                    android:textColor="@color/uvmsTextPrimaryLight"
                    android:paddingTop="4dp"/>

                <TextView
                    android:id="@+id/tvLicenseFilePath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="File: N/A"
                    android:textSize="14sp"
                    android:textColor="@color/uvmsTextPrimaryLight"
                    android:paddingTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
