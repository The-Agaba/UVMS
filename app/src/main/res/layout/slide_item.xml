<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Slide Image -->
    <ImageView
        android:id="@+id/imgSlide"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="Description of the slide"/>

    <!-- Slide Title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSlideTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slide_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="@color/uvmsTextPrimaryLight"
        style="@style/TextAppearance.Material3.HeadlineSmall"/>

    <!-- Slide Description -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSlideDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slide_description"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/uvmsTextSecondaryLight"
        style="@style/TextAppearance.Material3.BodyMedium"/>

</LinearLayout>
