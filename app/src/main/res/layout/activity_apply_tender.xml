<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_apply_tender"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/customTopNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:padding="12dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/bottom_round_borders"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                tools:text="Supply of Laboratory Equipment" />

            <TextView
                android:id="@+id/tvCollegeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/college" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:clipToPadding="false"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="16dp"
            android:padding="6dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply for this tender by selecting a plot."
                android:textColor="@color/uvmsTextPrimaryLight"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginBottom="16dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name:"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColor="@color/textLight"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Person:"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvContactPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColor="@color/textLight"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColor="@color/textLight"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Plot:"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spinnerPlots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"/>


            <Button
                android:id="@+id/btnSubmitApplication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Application"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/uvmsTextPrimaryDark"
                android:padding="12dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
