<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/uvmsBackgroundLight"
    android:id="@+id/activity_apply_tender">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp"
        android:padding="6dp">

        <!-- Top AppBar -->
        <RelativeLayout
            android:id="@+id/customTopNav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="25dp"
            android:padding="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bottom_round_borders">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTenderTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"
                    tools:text="Supply of Laboratory Equipment" />

                <TextView
                    android:id="@+id/tvCollegeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/college"/>

            </LinearLayout>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/uvmsSurfaceLight"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:clipToPadding="false"
        android:elevation="0.5dp">

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply for this tender by selecting a plot, uploading your proposal and contract PDFs."
            android:textColor="@color/uvmsTextPrimaryLight"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Vendor info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Name:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@color/uvmsSurfaceDark"
            android:textColor="@color/uvmsTextPrimaryDark"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Person:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvContactPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@color/uvmsSurfaceDark"
            android:textColor="@color/uvmsTextPrimaryDark"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@color/uvmsSurfaceDark"
            android:textColor="@color/uvmsTextPrimaryDark"
            android:layout_marginBottom="16dp"/>

        <!-- Plot selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Plot:"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerPlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Proposal upload -->
        <Button
            android:id="@+id/btnUploadProposal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Proposal (PDF)"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/uvmsAccentCyan"/>
        <TextView
            android:id="@+id/tvProposalFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No file selected"
            android:textColor="@color/uvmsTextSecondaryDark"
            android:layout_marginBottom="16dp"/>

        <!-- Contract upload -->
        <Button
            android:id="@+id/btnUploadContract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Contract (PDF)"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/uvmsAccentCyan"/>
        <TextView
            android:id="@+id/tvContractFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No file selected"
            android:textColor="@color/uvmsTextSecondaryDark"
            android:layout_marginBottom="16dp"/>

        <!-- Submit button -->
        <Button
            android:id="@+id/btnSubmitApplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Application"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/uvmsTextPrimaryDark"
            android:padding="12dp"/>

    </LinearLayout>

    </LinearLayout>
</ScrollView>
