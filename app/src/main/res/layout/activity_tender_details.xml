<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tender_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/uvmsBackgroundLight">

    <!-- ðŸ”¹ Top AppBar -->
    <RelativeLayout
        android:id="@+id/customTopNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:padding="12dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/bottom_round_borders"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                tools:text="Supply of Laboratory Equipment" />

            <TextView
                android:id="@+id/tvCollegeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/college"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- ðŸ”¹ Tender Info Card (fixed) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Tender ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_id_card"
                    app:tint="@color/uvmsBluePrimary" />

                <TextView
                    android:id="@+id/tvTenderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    tools:text="UDOM/ICT/2025/01" />
            </LinearLayout>

            <!-- Post Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_date_range_24"
                    app:tint="@color/uvmsBluePrimary" />

                <TextView
                    android:id="@+id/tvTenderPostDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    tools:text="Posted on: 13 Nov 2025 â€¢ 12:24 EAT" />
            </LinearLayout>

            <!-- Deadline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_schedule_24"
                    app:tint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tvTenderDeadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    tools:text="Closes: 01 Dec 2025 â€¢ 23:59 EAT" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/uvmsDivider"
                android:layout_marginVertical="8dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvTenderDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                tools:text="Tender description goes here, briefly summarizing scope of work and requirements." />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸ”¹ Dedicated Plots Section (ONLY this scrolls) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dedicated_plots"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lvPlots"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_plot"/>

    <!-- ðŸ”¹ Fixed Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:spacing="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDownloadContract"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Contract"
            app:icon="@drawable/ic_download_24"
            app:iconGravity="textStart"
            app:iconTint="@color/uvmsBluePrimary"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApplyTender"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply for this Tender"
            app:icon="@drawable/ic_apply_24"
            app:iconGravity="textStart"
            app:iconTint="@color/uvmsTextPrimaryLight"/>
    </LinearLayout>

</LinearLayout>
