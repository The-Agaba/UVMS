<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent">

    <!-- Top Nav + line wrapped in vertical LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top AppBar -->
        <RelativeLayout
            android:id="@+id/customTopNav"
            android:layout_width="match_parent"
            android:padding="13dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:elevation="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/navTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, Collin"
                    android:textColor="@color/uvmsBlueDark"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/navTitle_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/uvmsBlueDark"
                    android:textSize="15sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/navRightIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_notification"
                app:tint="@color/uvmsBlueDark" />

        </RelativeLayout>

        <!-- Horizontal line below top nav -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/curvedline"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

    <!-- Main content container (for fragments) -->
    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/round_border"

        app:menu="@menu/bottom_nav"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        android:layout_gravity="bottom"/>

</FrameLayout>
