<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/uvmsBackgroundLight">

    <!-- Static Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/bottom_round_borders"
        android:orientation="vertical">

        <!-- Top AppBar -->
        <RelativeLayout
            android:id="@+id/customTopNav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="25dp"
             android:padding="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bottom_round_borders">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/navTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, Collin"
                    android:textColor="@color/uvmsBlueDark"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/navTitle_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/uvmsBlueDark"
                    android:textSize="15sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/navRightIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_notification"
                app:tint="@color/uvmsBlueDark" />
        </RelativeLayout>


    </LinearLayout>

    <!-- Fragment container (fills remaining space) -->
    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:background="@color/uvmsBackgroundLight"/>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_gravity="bottom"
        android:background="@drawable/wavy"
        app:menu="@menu/bottom_nav"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"/>

</FrameLayout>
