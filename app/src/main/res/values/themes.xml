<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.UVMS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/uvmsBluePrimary</item>
        <item name="colorPrimaryVariant">@color/uvmsBlueDark</item>
        <item name="colorSecondary">@color/uvmsBlueLight</item>
        <item name="android:colorBackground">@color/uvmsBackgroundLight</item>
        <item name="colorSurface">@color/uvmsSurfaceLight</item>
        <item name="colorError">@color/uvmsErrorRed</item>
        <item name="colorOnPrimary">@color/uvmsTextPrimaryLight</item>
        <item name="colorOnBackground">@color/uvmsTextPrimaryLight</item>
        <item name="colorOnSurface">@color/uvmsTextPrimaryLight</item>
        <item name="colorOnError">@color/uvmsTextPrimaryLight</item>

        <!-- Typography (optional, you can customize fonts here) -->


    </style>

    <!-- Light Theme -->
    <style name="Theme.UVMS" parent="Base.Theme.UVMS" />

    <style name="Theme.UVMS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UVMS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UVMS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
